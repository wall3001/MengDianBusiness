<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/tabar_background">
        <TextView
            android:id="@+id/a02_life_title"
            style="@style/TitleTextStyle"
            android:text="认证"
            android:textColor="@color/White"
             />
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/a02_life_return"
            android:layout_width="40dp"
            android:padding="8dp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"
            android:src="@drawable/return_arraw" />
        <TextView
            android:layout_toRightOf="@+id/a02_life_return"
            android:layout_width="50dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="店铺"
            android:textColor="@color/White"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/a"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="真实姓名"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/user_authentication_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"/>
        </LinearLayout>
        <ImageView
            android:layout_below="@+id/a"
            android:id="@+id/b"
            android:background="@color/Segmentingline"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_below="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/c"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="身份证号"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/user_authentication_idcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"/>
        </LinearLayout>
        <ImageView
            android:layout_below="@+id/c"
            android:id="@+id/d"
            android:background="@color/Segmentingline"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_below="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/e"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="店铺名称"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/user_authentication_shopname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"/>
        </LinearLayout>
        <ImageView
            android:layout_below="@+id/e"
            android:id="@+id/f"
            android:background="@color/Segmentingline"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_below="@+id/f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/g"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="身份证号"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/user_authentication_sjopaddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"/>
        </LinearLayout>
        <ImageView
            android:layout_below="@+id/g"
            android:id="@+id/h"
            android:background="@color/Segmentingline"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_below="@+id/h"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/j"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1.上传身份证正面照片"
                android:textColor="@color/text"
                android:textSize="18dp"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <ImageView
            android:layout_below="@+id/j"
            android:id="@+id/k"
            android:background="@color/Segmentingline"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/k"
            android:id="@+id/l"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参考照片"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/authentication_idcard01"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的照片"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/authentication_null"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/l"
            android:id="@+id/p"
            android:background="@color/Segmentingline"/>
        <LinearLayout
            android:layout_below="@+id/p"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/m"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2.上传身份证反面照片"
                android:textColor="@color/text"
                android:textSize="18dp"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <ImageView
            android:layout_below="@+id/m"
            android:id="@+id/n"
            android:background="@color/Segmentingline"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/n"
            android:id="@+id/o"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参考照片"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/authentication_idcard02"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的照片"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/authentication_null"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/o"
            android:background="@color/Segmentingline"/>
        <LinearLayout
            android:layout_below="@+id/o"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/q"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3.上传营业执照或卫生许可证"
                android:textColor="@color/text"
                android:textSize="18dp"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <ImageView
            android:layout_below="@+id/q"
            android:id="@+id/w"
            android:background="@color/Segmentingline"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/w"
            android:id="@+id/r"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参考照片"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/authentication_weisheng"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的照片"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/authentication_null"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/r"
            android:id="@+id/t"
            android:background="@color/Segmentingline"/>

        <Button
            android:id="@+id/authentication_submit"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_login"
            android:text="提交验证"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:layout_below="@+id/t"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/authentication_submit"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/authentication_agree"
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  同意《萌点商家端个人信息上传协议》"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

</RelativeLayout>
