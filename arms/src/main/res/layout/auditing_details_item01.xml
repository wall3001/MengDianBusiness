<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/auditing_details_background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"

                android:id="@+id/auditing_details_item01_businessimg"
                android:src="@drawable/auditing_details_item01_busniess"/>
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="小可爱.."
                android:textSize="15dp"
                android:textColor="@color/text"
                android:layout_toRightOf="@+id/auditing_details_item01_businessimg"
                android:id="@+id/auditing_details_item01_businessname"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>
                <ImageView
                    android:id="@+id/a"
                    android:layout_width="100dp"
                    android:layout_height="5dp"
                    android:background="@drawable/auditing_details_item01_arraw"
                    android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/auditing_details_item01_date"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_above="@+id/a"
                android:layout_centerHorizontal="true"
                android:text="2017-11-22"
                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/a"
                android:layout_centerHorizontal="true"
                android:text="15:30"
                android:gravity="center"
                android:id="@+id/auditing_details_item01_time"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/auditing_details_item01_riderimg"
                android:src="@drawable/auditing_details_item01_rider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="小龙女"
                android:textSize="15dp"
                android:textColor="@color/text"
                android:layout_marginTop="20dp"
                android:id="@+id/auditing_details_item01_ridername"
                android:layout_toRightOf="@+id/auditing_details_item01_riderimg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已接订单"
                android:layout_below="@+id/auditing_details_item01_ridername"
                android:layout_toRightOf="@+id/auditing_details_item01_riderimg"
                android:textColor="@color/text"
                android:textSize="15dp"/>



        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Segmentingline"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="编号"
                    android:textSize="15dp"
                    android:textColor="@color/text"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/auditing_details_item01_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="#1"
                    android:textColor="@color/text"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="已下单时间"
                    android:textSize="15dp"
                    android:textColor="@color/text"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/auditing_details_item01_longtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="10分钟"
                    android:textColor="@color/text"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_login"
            android:layout_gravity="center_horizontal"
            android:text="接单"
            android:textColor="@color/White"
            android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>
