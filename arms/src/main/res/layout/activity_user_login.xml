<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/login_icon"/>
    <RelativeLayout
        android:layout_below="@+id/icon"
        android:id="@+id/layout_01"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/login_01"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_user"/>
        <EditText
            android:id="@+id/login_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/login_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/text"
            android:hint="手机号/用户名"
            android:textSize="15dp"/>
        <ImageView
            android:visibility="invisible"
            android:id="@+id/login_name_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/login_delete"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Segmentingline"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_02"
        android:layout_below="@+id/layout_01"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/login_02"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_pwd"/>
        <EditText
            android:id="@+id/login_pwd"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/login_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/text"
            android:hint="请输入验证码"
            android:textSize="15dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Segmentingline"/>
        <Button
            android:id="@+id/login_user_code"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_login"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:text="发送验证码"
            android:textColor="@color/White"/>
    </RelativeLayout>

    <Button
        android:id="@+id/login_submit"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_02"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_login"
        android:text="登录"
        android:textColor="@color/White"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/login_jump"
        android:layout_alignParentBottom="true"
        android:text="暂不登录，先逛一逛"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="12dp"/>
</RelativeLayout>
